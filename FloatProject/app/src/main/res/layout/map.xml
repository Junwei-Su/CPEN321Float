<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background"
                tools:context=".MapPage">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              android:name="com.google.android.gms.maps.MapFragment"
              android:id="@+id/map"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/spacerparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/mapbuttonpanel"
        android:visibility="invisible">
        <Space
            android:id="@+id/spacer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <RelativeLayout
            android:id="@+id/infoWIndowButtons"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <LinearLayout
                android:id="@+id/infowindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin"
                android:background="@color/white">
                <ImageView
                    android:id="@+id/campaignpic"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/sampcamp"
                    android:layout_gravity="top"
                    android:layout_weight="3"/>
                <LinearLayout
                    android:id="@+id/campaigninfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_gravity="left">
                    <TextView
                        android:id="@+id/campaigntitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="aaron is great"
                        android:textSize="10pt"
                        android:layout_gravity="left"
                        android:layout_weight="2"/>
                    <LinearLayout
                        android:id="@+id/user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:gravity="start"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/userpic"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/sampcamp"
                            android:layout_weight="8"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="the great aaron"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/charity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/charitypic"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/sampcamp"
                            android:layout_weight="8"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/charityname"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="aarons lunch money"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageButton
                android:id="@+id/closeWindow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/xbutton" />
            <Button
                android:id="@+id/details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="@string/deets"
                android:textColor="@color/darkestbackground"
                style="?android:attr/buttonBarButtonStyle"
                />


        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/mapbuttonpanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        style="?android:attr/buttonBarStyle">

        <Button
            android:id="@+id/joincamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/joincamp"
            android:textColor="@color/darkestbackground"
            style="?android:attr/buttonBarButtonStyle"/>

        <Button
            android:id="@+id/createcamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/createcamp"
            android:textColor="@color/darkestbackground"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>

    <TextView
        android:id="@+id/thisusername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>