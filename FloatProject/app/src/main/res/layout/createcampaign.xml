<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E0E0E0">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/campbuttonpanel">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <EditText
        android:id="@+id/titlein"
        android:maxLength = "15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:hint="@string/titlein"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pledgein"
            android:textColor="@android:color/black"
            android:hint="campaign picture"/>
    <LinearLayout
        android:id="@+id/photopanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titlein"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/default_camp_pic"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:background="#00838F"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/white"
            android:text="Upload Photo"
            android:onClick="loadImagefromGallery"/>
    </LinearLayout>

    <EditText
        android:id="@+id/charityin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/photopanel"
        android:hint="@string/charityin"/>

    <EditText
        android:id="@+id/pledgein"
        android:inputType="number"
        android:maxLength = "5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/goalin"
        android:hint="@string/pledgein"/>
    <TextView
        android:id="@+id/initiallocationtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pledgein"
        android:textColor="@android:color/black"
        android:hint="@string/initiallocationin"/>
    <LinearLayout
        android:id="@+id/initiallocationin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:layout_below="@+id/initiallocationtext">
        <TextView
            android:id="@+id/initlocatlatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:textSize="19dp"
            android:hint="Latitude"/>
        <TextView
            android:id="@+id/initlocatlongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:textSize="19dp"
            android:hint="Longitude"/>
        <Button
            android:id="@+id/getCoords"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#00838F"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:text="Get My Coords"/>
    </LinearLayout>
        //destination address
        <TextView
            android:id="@+id/destinationAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/initiallocationin"
            android:textColor="@android:color/black"
            android:hint="destination address"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:id="@+id/destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="15dp"
                android:hint="   Address"/>
        </LinearLayout>
    <TextView
        android:id="@+id/destinationlocationtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/initiallocationin"
        android:textColor="@android:color/black"
        android:hint="@string/destinationlocationin"/>
    <LinearLayout
        android:id="@+id/destinationlocationin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@+id/destinationlocationtext">
        <EditText
            android:id="@+id/destlocatlatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Latitude"/>
        <EditText
            android:id="@+id/destlocatlongitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Longitude"/>
        <Button
            android:id="@+id/findCoords"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#00838F"
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:text="Search Coords"/>
    </LinearLayout>

    <EditText
        android:id="@+id/descriptionin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/destinationlocationin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_above="@+id/campbuttonpanel"
        android:layout_centerHorizontal="true"
        android:gravity="top"
        android:hint="@string/descriptionin"/>
    </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/campbuttonpanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        style="?android:attr/buttonBarStyle">
        <Button
            android:id="@+id/savecamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/savecamp"
            android:textColor="@color/darkestbackground"
            style="?android:attr/buttonBarButtonStyle" />
        <Button
            android:id="@+id/launchcamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/launchcamp"
            android:textColor="@color/darkestbackground"
            style="?android:attr/buttonBarButtonStyle"/>
    </LinearLayout>
</RelativeLayout>