<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Your campaign:  "
            android:fontFamily="sans-serif-light"
            android:textColor="#373737"
            android:textSize = "15sp"
            android:paddingTop = "50sp"
            android:id = "@+id/campaign_title_tag"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/campaign_title2"
            android:textColor="#373737"
            android:fontFamily="sans-serif-light"
            android:text = "Title"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize = "15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/succeded_tag"
            android:textColor="#373737"
            android:text = "  has succeeded!"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textSize = "15sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="135sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="#373737"
            android:text = "The amount:  "
            android:textSize = "15sp" />

        <TextView
            android:layout_marginTop="135sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#373737"
            android:fontFamily="sans-serif-light"
            android:id="@+id/amount"
            android:text = "amount"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize = "15sp" />

        <TextView
            android:layout_marginTop="135sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textColor="#373737"
            android:id="@+id/charged_tag"
            android:text = " has been charged to your account"
            android:gravity="center"
            android:textSize = "15sp" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="220sp"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="#373737"
        android:layout_height="wrap_content"
        android:text="Payment Id : " />


    <TextView
        android:id="@+id/future_payment_id"
        android:textStyle="bold"
        android:layout_marginTop="240sp"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="#373737"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="400dp"
        android:id="@+id/return_map2"
        android:fontFamily="sans-serif-light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F4F4F4"
        android:background="@drawable/mybutton"
        android:text="Return to Map Page"
        android:layout_weight="1"/>



</RelativeLayout>
